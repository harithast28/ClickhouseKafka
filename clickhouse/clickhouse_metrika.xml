<?xml version="1.0"?>
<yandex>
    <clickhouse_remote_servers>
    	<cluster_1>
    		<shard>
          <weight>1</weight>
          <internal_replication>true</internal_replication>
    			<replica>
    				<host>clickhouse-server</host>
    				<port>9009</port>
    			</replica>
    		</shard>
    	</cluster_1>
    </clickhouse_remote_servers>
    <zookeeper>
        <node index="1">
            <host>zookeeper</host>
            <port>2181</port>
        </node>
    </zookeeper>
    <kafka>
        <node index="2">
            <host>kafka</host>
            <port>9092</port>
        </node>
    </kafka>
    <networks>
        <ip>::/0</ip>
    </networks>
</yandex>
